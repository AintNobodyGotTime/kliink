<div class="container">
  <div class="well">

    <h3>Project Activity</h3>
      <div class="row" id="project">

      <ul class="list-group">
        <% @project.project_items.each do |item| %>
          <div class="project_item">
            <div class="content center">
              <li class="list-group-item">
                <%=item.content %>
              </li>
              <li class="list-group-item">
                <div class="interactions">
                  <span class="like_button">
                    <%= image_tag "heart-points-unselected2.jpg", width:100,  alt: "Like", class: "like" %>
                  </span>

                  <span class="share_button", data-toggle="modal" data-target="#myModal">
                    <%= image_tag "share-points2.jpg", width:100, alt: "Share", class: "share" %>
                  </span>
                  <div id="myModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">

                      <!-- Modal content-->
                      <div class="modal-content">
                        <div class="modal-body">
                          <p><%= image_tag "sharing_modal.png", width:560, alt: "Share", class: "share" %></p>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                        </div>
                      </div>

                    </div>
                  </div>
                </div>
              </li>
            </div>
          </div>
        <% end %>
      </ul>
    </div> 
  </div>    
</div>

<div class="container">
  <div class="comments">
    <%= form_for :comment do |f| %>
    Comment on this project piece: <%= f.text_field :content, style: 'width: 60%;' %><br />
    <%= f.hidden_field :project_id, :value => @project.id%>
    <%= f.hidden_field :user_id, :value => current_user.id%>
    <%= f.submit 'submit', :class => 'btn btn-primary' %>
    <% end %>
  </div>
    <ul>
      <% @project.comments.each do |comment| %>
        <li class="list-group-item">

         <% author = User.find(comment.user_id) %>
          <div class="show_comment">
            <%= comment.content %>
          </div>
          <div class="author">
            - <%= author.first_name %> <%= author.last_name %>
          </div>
        </li>
      <% end %>
    </ul>

    </div>
  </div>

  <ul>
