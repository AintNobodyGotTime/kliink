<p id="notice"><%= notice %></p>
<div class="container">
<h1>Listing Project Items</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_items.each do |project_item| %>

    <tr>
      <td><%= project_item.title %> 
      <%= project_item.content %>
      <%= project_item.url %> </td>
      <% if project_item.url != nil %>
      <img src= <%= img_url ("project_item.url") style="height:250px;" %>></img>
      <% end %>
        <td><%= link_to 'Show', project_item %> </td> 
        <td><%= link_to 'Edit', edit_project_item_path(project_item) %> </td>
        <td><%= link_to 'Destroy', project_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project item', new_project_item_path %>
</div>