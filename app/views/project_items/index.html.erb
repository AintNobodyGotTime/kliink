<p id="notice"><%= notice %></p>
<div class="container">
<h1>Listing Project Items</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_items.each do |project_item| %>

    <tr>
      <td><%= project_item.title %> 
      <%= project_item.content %> </td>
      <td><% if project_item.url != nil %>
      <td><%= image_tag (project_item.url), height:200, width:300, class:"img-rounded" %></td>
      <% end %>
        
        <td><%= link_to 'Edit', edit_project_item_path(project_item) %> |</td>
        <td><%= link_to 'Delete', project_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="panel">
<button>
<%= link_to 'Create New Project item', new_project_item_path %>
</button>
</div>


</div>